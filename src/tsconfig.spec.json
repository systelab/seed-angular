{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"outDir": "../out-tsc/spec",
		"baseUrl": "./",
		"paths": {
			"@globals/*": ["common/globals/*"],
			"@components/*": ["common/components/*"],
			"@api/*": ["common/api/*"],
			"@model/*": ["common/model/*"],
			"@features/*": ["features/*"]
		},
		"module": "commonjs",
		"target": "es5",
		"types": ["jasmine", "node"]
	},
	"files": ["test.ts", "polyfills.ts"],
	"include": ["**/*.spec.ts", "**/*.d.ts"]
}
